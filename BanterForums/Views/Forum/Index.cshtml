@model BanterForums.Models.Forum.ForumIndexModel

<h1>Forums</h1>

<table class ="table table-hover" id ="forumIndexTable">
    <tbody>
        @foreach (var forum in Model.ForumList)
        {
            <tr>
                <td>
                    <a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id"> <!--Use the forum controller & topic method to return view-->
                        @forum.Name
                    </a>
                </td>
                <td>
                    @forum.Description
                </td>
            </tr>
        }
    </tbody>
</table>